{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://dev.wandb.com/schema/testlib-config.json",
    "title": "TestlibConfig",
    "description": "Weights & Biases Testlib Configuration.",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "id": {
            "type": "string",
            "description": "Test identification"
        },
        "name": {
            "type": "string",
            "description": "Test name"
        },
        "tag": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "suite": {
                    "type": "string"
                },
                "shard": {
                    "type": "string"
                },
                "shards": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "platforms": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "enum": ["linux", "mac", "win"]
                    }
                },
                "skip": {
                    "type": "bool"
		},
                "skips": {
                    "type": "array",
                    "items": {
                        "type": "object",
		        "additionalProperties": false,
		        "properties": {
                            "reason": {
                                "type": "string"
                            },
                            "platform": {
                                "type": "string",
                                "enum": ["linux", "mac", "win"]
                            }
		        }
		    }
                }
            }
        },
        "plugin": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "assert": {
            "type": "array",
            "items": {
                "type": "object"
            }
        },
        "var": {
            "type": "array",
            "items": {
                "type": "object"
            }
        },
        "env": {
            "type": "array",
            "items": {
                "type": "object"
            }
        },
        "command": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "timeout": {
                    "type": "integer"
                },
                "program": {
                    "type": "string",
                    "description": "Program name"
                },
                "mode": {
                    "type": "string",
                    "description": "Execution mode: default (./module/lib.py) or module (python -m module.lib)",
                    "default": "default",
                    "enum": ["default", "module"]
                },
                "args": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "parametrize": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "permute": {
                    "type": "array",
                    "items": {
                        "type": "object"
                    }
                }
            }
        },
        "depend": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "requirements": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "pip_install_timeout": {
                    "type": "integer"
		},
                "pip_uninstall_timeout": {
                    "type": "integer"
		},
                "pip_install_options": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "uninstall": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "files": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                            "file": {
                               "type": "string"
                            },
                            "source": {
                               "type": "string"
                            }
                        }
                    }
                }
            }
        }
    }
}
